{
  "name": "@omi3/audio",
  "version": "2.0.1",
  "description": "Web Audio API",
  "license": "Apache-2.0",
  "scripts": {
    "dev": "tsup --watch",
    "build:pkg": "tsup",
    "lint": "biome check --write .",
    "test": "vitest run --passWithNoTests",
    "prepublishOnly": "pnpm run build:pkg"
  },
  "types": "./dist/index.d.mts",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./react": {
      "types": "./dist/react/index.d.mts",
      "import": "./dist/react/index.mjs"
    }
  },
  "files": [
    "dist/**",
    "LICENSE",
    "README.md"
  ],
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Omi3",
    "url": "https://github.com/lucien-loua"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lucien-loua/omi3.git"
  },
  "homepage": "https://github.com/lucien-loua/omi3/tree/main/packages/audio#readme",
  "bugs": {
    "url": "https://github.com/lucien-loua/omi3/issues"
  },
  "keywords": [
    "audio",
    "web audio",
    "html5 audio",
    "react"
  ],
  "devDependencies": {
    "@omi3/typescript": "workspace:*",
    "@omi3/utils": "workspace:*",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "3.1.2",
    "jsdom": "^26.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "react": "^18.3.0 || ^19.0.0",
    "react-dom": "^18.3.0 || ^19.0.0"
  }
}